<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activity.SignUp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:background="@drawable/hover"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/Name"
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:hint="Enter Name"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textColorHint="#915E5E"
        android:inputType="text"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/SUedt_email"
        android:layout_below="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:hint="Enter Email"
        android:textColorHint="#915E5E"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/SUedt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:hint="Create Password"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#915E5E"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/SUedt_email"
        />
    <EditText
        android:id="@+id/edtRegPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:textColorHint="#915E5E"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/SUedt_pass"
        />
    <RadioGroup
        android:id="@+id/edtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/edtRegPassword2"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/edtradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Gender"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_below="@+id/edtRegPassword2"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />
        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="625dp" />
        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="625dp" />
    </RadioGroup>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtGender"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="10dp"
        android:text="Sign Up "
        android:backgroundTint="#97C12525"
        android:textAllCaps="false"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/btnSignIn2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnSignUp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="8dp"
        android:text="Sign In "
        android:backgroundTint="#97C12525"
        android:textAllCaps="false"
        android:textSize="15dp"
        />
</RelativeLayout>